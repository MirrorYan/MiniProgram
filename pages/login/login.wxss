/* pages/login/login.wxss */
.main {
  display: flex;
  height: 100vh;
  align-items: center;
}
view {
  width: 100%;
}
.login-box {
  margin-bottom: 150px;
  padding: 0 50rpx;
}
.logo {
  width: 100px;
  height: 100px;
  margin: 0 auto 20px;
  border-radius: 50%;
}
.logo image {
  width: 100%;
  height: 100%;
}
.flex-row {
  margin: 10px 0;
  align-items: center;
}
.input-label {
  min-width: 75px;
  text-align: right;
  font-size: 18px;
}
button {
  width: 350rpx;
  color: #666;
  background: #BAF4EA;
}
