.sale-box {
  position: relative; }
  .sale-box .btn {
    width: auto;
    padding: 2px 10px;
    font-size: 15px;
    font-weight: normal;
    border-radius: 5px;
    position: absolute;
    top: 10rpx;
    right: 10rpx;
  }

.input-row {
  width: 100%;
  display: flex;
  align-items: center;
  margin: 10px 0; }
  .input-label,
  .input-text {
    height: 30px;
    line-height: 30px; }
  .input-label {
    display: inline-block;
    white-space: nowrap; }
  .input-text {
    flex: 1;
    border: 1px solid #eee;
  }
